# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,json}]
indent_size = 2

[*.html]
indent_size = 2
insert_final_newline = false

[*.md]
max_line_length = off
trim_trailing_whitespace = false
insert_final_newline = false
